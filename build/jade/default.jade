doctype html
html(lang="en")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title {{meta_title}}
        meta(name='description', content='{{meta_description}}')
        meta(name='HandheldFriendly', content='True')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        //- style
        //-   include ./small.css
        link(rel='shortcut icon', href="{{asset 'img/favicon.ico'}}")
        link(rel='stylesheet', href="{{asset 'css/main.min.css'}}")
        
        script(defer, src="{{asset 'js/libs/jquery.min.js'}}")
        script(defer, src="{{asset 'js/functions.min.js'}}")
        include ./partials/utilities/typekit
        noscript
            style.
                #baseLoad.pageCompiling {display: none}
                .back-icon {display: none !important}
                .wf-loading {opacity: 1 !important}
                @import url("https://fonts.googleapis.com/css?family=Open+Sans:300,700|Roboto+Slab:300,400,700")
        | {{ghost_head}}

    body(class="{{body_class}}", data-visit="1")
        .index-container
            | {{> loop}}
            | {{navigation}}
            | {{{body}}}
            | {{> footer}}

        | {{> menu/contact}}
