| {{#get "posts" limit="5" filter="page:false" include="tags" order="updated_at desc"}}
#flapper-menu
    .flapper-container
        ul#projects-dropdown
            .dropdown.wf-loading
                li
                    span
                        h4 Frank Taylor
                        p Projects
                | {{#foreach posts}}
                li.project
                    a.project-link.box-link(href="{{{url}}}", class="post-link") {{title}}
                | {{/foreach}}
        ul#resume-dropdown
            .dropdown.wf-loading
                li
                    span
                        h4 Frank Taylor
                        p Resume
                li.project
                    a(href="https://s3-us-west-1.amazonaws.com/frank-io/CV_FrankTaylor.pdf", target="_blank") View PDF
                li.project
                    a(href="https://s3-us-west-1.amazonaws.com/frank-io/CV_FrankTaylor.pdf") Print

.box-container.is-visible.
    {{#foreach posts}}{{#if featured}}<a href='{{{url}}}' class="box box-link">
    <div class="background-image" style="border-radius:2px;background-size: cover;height: 250px;background-repeat: no-repeat;background-position: top;box-shadow: -3px 8px 14px 2px #aaa;background-image: url({{image absolute="true"}});position:relative;display: flex;max-width: 80%;width:auto;margin: 25px 25px 0 25px"></div><h2 class="box-title">{{title}}</h2><p class="box-desc">{{meta_description}}</p></a>{{/if}}
        <a href='{{{url}}}' class="box box-link"><h2 class="box-title">{{title}}</h5><p class="box-desc">{{meta_description}}</p></a>{{/foreach}}
| {{/get}}
