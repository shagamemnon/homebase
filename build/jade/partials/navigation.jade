.top-bar
nav
  include ./svg/arrow
  a(href="/").home-link
    | {{#if @blog.logo}}<a class="logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Logo" /></a>
    | {{else}}
    h1.blog-title
      span {{@blog.title}}
      span |
      span.homebase HomeBase
    | {{/if}}

  ul#topMenu.
    {{#foreach navigation limit="3"}}
    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}" role="presentation">
        <a href="{{url absolute="true"}}">{{label}}
        </a>
    </li>
    {{/foreach}}
    <li class="nav-contact" id="nav-contact" role="presentation">Contact</li>
  //- | {{> search}}
  .author
    include ./svg/avatar
