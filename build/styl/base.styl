html, body, div, span, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, abbr, address, cite, code, del, dfn, em, img, ins, kbd, q, samp, small, strong, sub, sup, var, b, i, dl, dt, dd, ol, ul, li, form, fieldset, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, figcaption, figure, footer, header, menu, nav, section, summary, time, mark, audio, video
    background transparent
    font-size 100%
    vertical-align baseline
    border 0
    outline 0
    margin 0
    padding 0
    font-family: $ParagraphFont

*
    box-sizing: border-box

html
    background: transparent
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%
    font-size: 62.5%
    -webkit-font-smoothing antialiased
    -webkit-overflow-scrolling touch
    @media(max-width: 700px)
        font-size: 57.5%

body
    -webkit-font-smoothing: antialiased;
    margin: 0 auto
    padding: 0
    font-family: $Slab
    font-size: 1.7rem
    font-weight: 400
    color: #151515
    max-width: 100%
    background: $backgroundHome
    text-rendering: optimizeLegibility
    &.post-template
        @media(max-width: 900px)
            max-width: 90%

    @media(min-width: 1400px)
        max-width: 1400px

footer
    display: flex
    width: 95%
    color: #ddd
    text-align: center
    margin: 100px auto 25px
    font-size: 1.45rem
    color: white !important

    & > section span
        margin-left: 10px
        padding-left: 10px
        border-left: 1px solid #aaa
        @media(max-width: 700px)
            display: block
            width: 92%
            padding: 0
            margin: auto
            border: none
            color: #aaa
            padding-bottom: 12px

    & > section span
        &:first-child
            border: none

.home-template footer section span a
    color: white !important

article, aside, figure, figcaption, footer, header, nav, section
    display block

img
    -ms-interpolation-mode bicubic
    page-break-inside avoid

img, object, embed
    display block
    vertical-align middle
    max-width 100%
    width auto
    height auto
    border 0

audio, canvas, video
    display inline-block

audio
  &:not([controls])
    display none

#map_canvas img, .google-maps img
  max-width none

p, ul, ol, li, em
    line-height: 25px
    margin-bottom: 25px

p, h1, h2, h3, h4, h5, h6
    display: block

a
    text-decoration: none
    color: #151515

h1
    font-family: $Slab
    font-size: 4.1rem
    line-height: 1
    margin: 0 auto 12px
    letter-spacing: -0.5px

h2, h3, h2 strong, h3 strong, figcaption strong
    font-family: $Ingra
    letter-spacing: 2px
    text-align: left
    text-transform: uppercase
    color: #242424
    font-weight: 700
    margin-bottom: 12px

h2
    font-size: 2.4rem
    line-height: 25px

h3
    font-size: 2.4rem
    line-height: 25px

h4, figcaption strong
    font-size: 1.9rem
    line-height: 25px
    text-transform: uppercase
    font-family: $Ingra

h4, h5
    margin: 0 auto 12px

h5
    font-size: 2.3rem
    font-family: $Ingra !important
    font-weight: normal

.active-post
    width: 100%
    margin: auto
    max-width: 100%
    visibility: hidden
    display: block
    position: absolute
    padding-top: 0px
    transform: translateY(50px) scale(0.96)
    top: 0
    left: 0
    right: 0
    overflow: hidden
    height: 100%
    margin-bottom: 0px

    h1, h1 strong, h2, h2 strong, h3, h2 strong, h3 strong, figcaption strong, h4, h4 strong, h3 strong
        margin-top: 5rem

    h5
        color: gray
    ul, ol
        margin-left: 20px

        li
            padding-left: 10px

    figure
        margin: 0 0 25px
        padding: 12px 0 0
        height: auto
        cursor: zoom-in

        figcaption
            margin-top: 6px
            padding-top: 6px
        em
            display: block
            font-size: 17px
            color: gray
            line-height: 25px

    img, video, iframe, object, embed
        display: flex
        width: 100%
        border-top: 1px solid #ddd
        border-bottom: 1px solid #ddd
        padding-top: 12px
        padding-bottom: 12px
        margin-top: 0px

        &.zoomable
            background-image: url('/assets/img/zoom.png')
            background-color: rgba(0,0,0,0.9)
            background-position: bottom left
            background-size: 25px auto

.post-template
    background: white !important
    .active-post
        position: relative
        visibility: visible
        transform: translateY(25px) scale(1)
        transition-delay: 80ms
        transition-duration: 180ms
        overflow: visible
    nav, .top-bar
        background: white
        border-bottom: 1px solid #eee
    .back-icon
        visibility: visible
    .box-container
        display: none
    footer
        color: #444 !important

.index-container
    display: flex
    width: 100%
    max-width: 100%
    flex-flow: row wrap
    margin: 62px auto 0

nav
    display: flex

.is-white
    background-color: white !important
    background: white !important
    border-color: white !important

.active-post-header
    display: block
    width: 100%

    h5
        color: gray

.active-post-header, .active-post-body
    width: $articleContainer
    margin: auto
    max-width: 100%

.box
    display: inline
    text-decoration: none
    background: $tan
    width: 33%
    height: 200px
    border: 12px solid $backgroundHome
    transition: 200ms

    .background-image
        border-radius:2px
        background-size: cover
        background-color: white
        height: 200px
        background-repeat: no-repeat
        background-position: top
        box-shadow: -2px 8px 16px 1px #aaa
        position:relative
        display: flex
        max-width: 66%
        width: auto
        margin: 25px 25px 0 25px
        @media(max-width: 700px)
            height: 125px
            max-width: 100%

    .thumbnail-buttons
        height: 50px
        width: 100%
        display: flex
        text-align: center
        visibility: hidden
        position: absolute
        top: 375px
        transform: translateY(25px);
        transition: 25ms

        button
            display: block
            text-align: center
            text-transform: uppercase
            width: 45%
            max-width: 180px
            cursor: pointer
            margin-left: 25px
            font-size: 13px
            letter-spacing: 3px
            font-family: $Ingra
            font-weight: 700
            outline: none

            &:first-child
                color: white
                background: $backgroundHome
                border: 2px solid white

            &:last-child
                border: 2px solid #111
                background: white



    &:hover
        text-decoration: none
        background: white
        transition: 200ms
        .thumbnail-buttons
            visibility: visible
            transition-delay: 75ms
            transition-duration: 125ms
            transform: translateY(0);
            @media(max-width: 700px)
                visibility: hidden
        & > .box-title
            transition: 200ms
            position: relative
        & > .box-desc
            transition: 200ms
            position: relative


    &:first-child
        width: 57.01666%

    &:nth-child(2)
        width: 42.01666%

    &:first-child, &:nth-child(2)
        height: 400px
        @media(max-width: 700px)
            height: 325px

    &:nth-child(6n)
        margin-right: 0

    &:first-child, &:nth-child(2)
        &:hover
            transition: 200ms
            .background-image
                height: 125px
                max-width: 40%
                transition: 275ms
            & > .box-title
                transition: 200ms
                position: relative
                font-size: 30px
            & > .box-desc
                transition: 200ms
                font-size: 18px
                position: relative
.box, .box:nth-child(n)
    @media(max-width: 700px)
        width: 100%

.box-container
    display: flex
    width: 100%
    justify-content: center
    flex-flow: row wrap
    margin: auto
    background: inherit
    height: 100%
    visibility: hidden

    &.is-visible
        visibility: visible !important

.box-title
    font-size: 24px
    margin-bottom: 0
    margin-top: 37px

.box-title, .box-desc
    padding-left: 25px
    padding-right: 25px

.box-desc
    margin-top: 6px
    max-height: 52px
    overflow: hidden
    position: relative
