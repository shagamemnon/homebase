html, body, div, span, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, abbr, address, cite, code, del, dfn, em, img, ins, kbd, q, samp, small, strong, sub, sup, var, b, i, dl, dt, dd, ol, ul, li, form, fieldset, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, figcaption, figure, footer, header, menu, nav, section, summary, time, mark, audio, video
  background transparent
  font-size 100%
  vertical-align baseline
  border 0
  outline 0
  margin 0
  padding 0
  font-family: $ParagraphFont

*
  box-sizing: border-box

html
  background: transparent
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%
  font-size: 62.5%
  -webkit-font-smoothing antialiased
  -webkit-overflow-scrolling touch

body
  -webkit-font-smoothing: antialiased;
  margin: 0 auto
  padding: 0
  font-family: $Slab
  font-size: 1.7em
  font-weight: 400
  color: #151515
  max-width: 100%
  background: $backgroundHome

  @media(max-width: 900px)
    max-width: 98%

article, aside, figure, figcaption, footer, header, nav, section
  display block

img
  -ms-interpolation-mode bicubic
  page-break-inside avoid

img, object, embed
  display block
  vertical-align middle
  max-width 100%
  width auto
  height auto
  border 0

audio, canvas, video
  display inline-block

audio
  &:not([controls])
    display none

#map_canvas img, .google-maps img
  max-width none

p, ul, ol, li, em
    line-height: 25px
    margin-bottom: 25px

p, h1, h2, h3, h4, h5, h6
    display: block

a
    text-decoration: none
    color: #151515

h1
    font-family: $Slab
    font-size: 52px
    line-height: 1
    margin: 0 auto 12px

h2, h3, h2 strong, h3 strong, figcaption strong
    font-family: $Pill
    letter-spacing: 2px
    text-align: left
    text-transform: uppercase
    color: #242424
    font-weight: 800
    margin-bottom: 12px
    margin-top: 50px

h2
    font-size: 25px
    line-height: 25px

h3
    font-size: 25px
    line-height: 25px

h4, figcaption strong
    font-size: 19px
    line-height: 25px
    text-transform: uppercase
    font-family: $Pill

h4, h5
    margin: 0 auto 25px

h5
    font-size: 26px
    font-family: $Ingra !important
    font-weight: 300

.active-post
    width: 100%
    margin: auto
    max-width: 100%
    visibility: hidden
    display: block
    position: absolute
    padding-top: 0px
    transform: translateY(-740px) scale(0.96)
    top: 0
    left: 0
    right: 0
    overflow: hidden
    height: 100%
    margin-bottom: -700px

    &.is-visible
        position: relative
        visibility: visible
        transform: translateY(-750px) scale(1)
        transition-delay: 80ms
        transition-duration: 180ms
        overflow: visible

    h5
        color: gray
    ul, ol
        margin-left: 20px

        li
            padding-left: 10px

figure
    margin: 0 0 25px
    padding: 12px 0 0
    height: auto
    cursor: zoom-in

    figcaption
        border-top: 1px solid #ddd
        margin-top: 6px
        padding-top: 6px
    em
        display: block
        font-size: 17px
        color: gray
        line-height: 25px

img, video, iframe, object, embed
    display: flex
    width: 100%

.video-container
    position: relative;
    padding-bottom: 56.25%
    padding-top: 30px;
    height: 0
    overflow: hidden

    iframe, object, embed
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%

.index-container
    display: flex
    width: 100%
    max-width: 100%
    flex-flow: row wrap
    margin: 100px auto 0

nav
    display: flex

.is-white
    background-color: white !important
    background: white !important
    border-color: white !important

.active-post-header
    display: block
    width: 100%

    h5
        color: gray

.active-post-header, .active-post-body
    width: $articleContainer
    margin: auto
    max-width: 100%

.box
    display: inline
    text-decoration: none
    background: $tan
    width: 33%
    height: 300px
    border: 12px solid $backgroundHome

    &:hover
        text-decoration: none

    &:first-child
        width: 59.01666%
        height: 500px
    &:nth-child(2)
        width: 40.01666%
        height: 500px
    &:nth-child(6n)
        margin-right: 0

.box-container
    display: flex
    width: 100%
    justify-content: center
    flex-flow: row wrap
    margin: auto
    background: #262626
    height: 100%
    visibility: hidden

    &.is-visible
        visibility: visible !important

.box-title
    font-size: 24px
    margin-bottom: 0

.box-title, .box-desc
    padding-left: 25px
    padding-right: 25px

.box-desc
    margin-top: 12px
