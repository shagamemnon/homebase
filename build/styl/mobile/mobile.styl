body
  max-width: 100% !important
  background: white

ol, ul, li, ol li, ul li, p, mark, p mark, a
  font-family: $MobileFont

.active-post-body *:not(h3)
    max-width: 100%

.active-post-body h1, h2, h3, h4, h5, h6
  font-family: $MobileHeader

.top-bar
  height: 60px
  display: none
  top: 0
  display: block
  position: fixed

.post-active .back-icon, .post-template .back-icon
  display: none !important

.tags
  margin-top: 24px

#avatar
  position: fixed
  top: -99px
  right: -80px
  transform: scale(0.15)

.dropdown
  display: none

.main-header
  display: none

main.index
  height: auto

h2.title
  top: 112px
  position: absolute
  font-size: 24px
  z-index: 2
  display: none !important

.back-icon
  display: none

.main-carousel
  z-index: 0
  max-width: 375px
  width: auto

#baseLoad.pageCompiling
  display: none !important

#overlay
  display: none !important

.published-at
  display: none

.post-template
  section#active-post
    overflow-x: hidden

    .active-post-container
      z-index: 0
      margin: 0px
      display: block
      position: relative
      margin-top: 6px
      width: auto

      header
        max-width: 100%
        padding-top: 0
        text-align: left
        margin: auto
        left: auto
        transform: none
        position: static
        left: 0
        right: 0
        top: 0
        padding-bottom: 0px

        .header-text
          transform: none
          margin-top: 48px
          margin-bottom: 24px
          padding: 0 0 48px
          max-width: 90%
          overflow: hidden

        h1
          font-family: $RobotoSlab
          font-size: 32px
          padding: 0
          line-height: 1.2
          margin-bottom: 12px !important
          padding-bottom: 0px
          margin-top: 0
          transform: none

        h5
          display: block
          transform: none
          padding 0
          margin: 0 auto
          width: 90%
          position: static

    .header-image
      display: none

  .active-post-body
    width: auto
    max-width: 85%
    margin-left: auto
    margin-right: auto
    padding: 72px 0 0
    @media(max-width: 700px)
        max-width: 93%

    h3
      min-width: auto
      position: static
      left: auto
      transform: none
      padding-top: 48px
      margin-bottom: 12px
      line-height: 1.2

    figure
      min-height: auto
      min-width: auto
      width: 100%
      max-width: 100%
      overflow: hidden
      position: relative
      left: 0px
      transform: none
      clearfix()
      cursor: zoom-in
      margin-top: 36px
      margin-bottom: 36px
      padding: 0 0 0 0 !important

      img, video
        position: static
        min-height: auto
        height: auto
        width: inherit
        min-width: auto
        height: auto
        overflow: visible
        padding-top: 6px
        padding-bottom: 6px

      em.credit
        display: none

      figcaption
        margin: 0px auto
        // text-align: left
        padding-top: 0
        transform: none
        &:after
          display: none !important
          content: none

        strong
          letter-spacing: 0.7px
          &:before
            line-height: 24px


    ol, ul
      width: auto
      max-width: 96%
      margin-right: 0
      padding-right: 0
      padding-top: 0
      li
        padding-left: 7px
        padding-bottom: 0
        margin-bottom: 0

nav
  margin-top: 36px
  overflow: visible
  width: 100%
  left: 0
  right: 0
  position: fixed
  height: 24px
  background: $backgroundColor
  img.author
    display: none
  ul#topMenu
    width: 100%
    max-width: 100%
    height: 24px
    line-height: 24px
    margin-top: 0px
    padding: 0
    float: none
    position: static
    background: $white
    margin-left: 0px
    li[role="presentation"]
      font-size: 10px
      padding: 0px 0px 0
      letter-spacing: 0px
      height: inherit
      margin: auto
      border: none
      max-width: 100%
      line-height: 24px
      box-shadow: none
      text-align: right
      span(1/3)


.post-template
  nav ul#topMenu li.nav-projects
    color: $black !important
.home-template
  nav ul#topMenu li.nav-projects
    color: $black !important
nav .home-link h1.blog-title
  width: calc(100% - 20px)
  height: auto
  margin: auto
  display: block
  position: fixed
  background: $white
  top: 0px
  max-width: 100%
  right: 0
  text-align: center
  left: 0px
  bottom: auto !important
  line-height: 24px
  padding-top: 0px
  font-size: 12px
  padding-left: 20px
  margin-top: 0px
  color: $orange !important
  border-bottom: 1px solid #ccc
  span, span.homebase
    font-size: 13px
    line-height: 36px
    top: 0

footer
  display: none

.post-template, .home-template
  footer[role=contentinfo]
    display: inline-block
    margin-top: 72px
    span
      font-size: 8px
      line-height: 12px
      color: #555 !important

#contact
  display: none

h2.title
  width: 325px
  margin: auto
  display: block

.index-container
  padding-top: 60px
  left: 0 !important
  header
    margin-bottom: 0px !important

.post-template .index-container
  padding-top: 0
  display: flex

.index-container
  .home-header
    padding-top: 15vh
    h5
      margin: 0px auto 16px !important
      max-width: 90%
      padding-bottom: 0px !important

.home-header
  background: url(/assets/img/uni-home.jpg) no-repeat
  background-size: cover
  background-repeat: no-repeat
  position: absolute
  background-position: left
  height: 75vh
  width: 100vw
  display: block
  left: 0
  right: 0
  top: 0

.project-list
  top: 0
  .project-details
    width: 100%

  header h4
    font-size: 29px !important
    line-height: 36px !important

.project-list .project-details header p
  line-height: 24px !important

nav .home-link h1.blog-title, nav .home-link h1.blog-title span.homebase, nav .home-link h1.blog-title span
  color: $gold
  opacity: 1

.index-container
  overflow-y: visible !important
  position: relative
  height: auto
  width: 100%
  max-width: 100%
  top: 0
  transform: none

.project-thumbs-background
  background: transparent
  height: 0

.project-thumbs-container
  height: auto
  max-height: 100%
  display: block
  margin-top: 0
  top: 0
  margin-bottom: 0

.project-thumbs
  stack()
  height: 250px
  display: block
  border-bottom: 1px solid #ddd
  header
    margin-top: 3px
  header p
    display: none

.home-header
  position: relative
  width: 100%
  padding: 0
  max-width: 100%
  margin: auto
  h1[itemprop='headline']
    text-align: center
  h5
    max-width: 90%
    width: 90%
    text-align: center

.flapper-container
  display: none
