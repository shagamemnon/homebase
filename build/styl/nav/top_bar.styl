nav
    max-width: $pageContainer
    overflow-y: hidden
    left: 0px
    right: 0px
    top: 0
    position: absolute
    height: 50px
    margin: 0 auto
    background: transparent !important
    display: block
    z-index: 22

    &:after
        content: ''
    li, ul, a, h3, h1
        color: white

    .logo, .blog-title, .blog-description
        font-family: $MenuFont

    @media(max-width: 700px)
        .back-icon, #avatar
            display: none

.top-bar
    position: absolute
    height: 50px
    overflow-x: hidden
    background: #282828
    box-shadow 0 2px 4px 0px rgba(0, 0, 0, 0.12)
    left: 0
    right: 0
    top: 0
    z-index: 21
    border-bottom: 1px solid $backgroundHome


.blog-title
    margin-bottom: 0
    display: inline-table
    width: auto
    text-align: center
    position: absolute
    left: 30px
    top: 0
    bottom: 0 !important
    font-family: "Open Sans"
    font-size: 18px
    line-height: 50px
    height: 50px
    padding: 0
    font-weight: 800 !important
    text-transform: uppercase
    color: $orange
    letter-spacing: 1.5px
    @media(max-width: 700px)
        left: 0
        right: 0
        font-size: 12px
        margin: auto
        position: relative
        text-align: center

    span
      font-family: inherit
      font-weight: bold
      line-height: 50px
      font-size: 14px
      padding-right: 6px
      display: table-cell
      transition-delay: 90ms
      transition-duration: 10ms
      &.homebase
        font-family: inherit
        font-size: 10px
        line-height: 50px
        opacity: 0.9
        top: -1px
        position: relative
        padding-right: 0
        transition-delay: 0ms
        transition-duration: 100ms
    &:hover
        span.homebase
            top: 0
            font-size: 14px


a.logo
    img
      display: none
    a.nav-close
      height: 10px

.avatar
  display: block
  right: -80px
  top: -89px
  position: absolute
  float: right
  z-index: 10000
  transform: scale(0.24)

.home-link
    height: 50px
    display: block
    width: 250px
    position: absolute
    z-index: 10000
    @media(max-width: 700px)
        position: relative
        color: black
        text-align: center
        margin: auto
        width: 100%
        display: flex
        height: 37px
        top: -10px

#topMenu
    width: 290px
    right: 30px
    padding: 0
    height: 50px
    top: 0px
    position: absolute
    display: inline-flex
    margin: auto
    text-align: center
    color: #888
    cursor: pointer
    font-family: $HeaderFont
    overflow-y: hidden

    @media(max-width: 700px)
        width: 100%
        display: flex
        left: 0
        right: 0
        top: 12px

    li[role="presentation"]
        display: inline
        margin: 0 auto
        width: auto
        padding: 0px 15px
        display: table-cell
        text-align: center
        box-shadow: 0
        height: inherit
        line-height: 50px
        text-transform: uppercase
        font-size: 10px
        font-weight: 800
        letter-spacing: 0.6px
        background: inherit
        color: inherit !important
        font-family: inherit

        a
            position: relative
            color: inherit !important
            text-decoration: none
            height: 50px !important
            display: block

        &:hover, &.is-active
            color: $white!important

.post-template
    #topMenu
        li[role="presentation"]
            &:hover, &.is-active
                color: black !important
