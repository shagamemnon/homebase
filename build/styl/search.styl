.search-bar
  position:fixed
  z-index: 11
  display: block
  top: 8px
  left: 0
  right: 0
  width: 250px
  margin: auto
  background: transparent
  #search-field
    background-image: url('/assets/img/search_white.png')
    background-size: auto 16px
    background-repeat: no-repeat
    background-position: 0px 50%
    color: #bbb
    background-color: transparent
    width: inherit
    font-family: $Gotham
    font-size: 11px
    height: 26px
    line-height: 26px
    padding: 0 0px 0 15px
    border:1px solid #888
    box-shadow: 0 0 3px 0px #888
    margin-top: 4px
    border-radius: 2px
    transition: 200ms
    display: block
    opacity: 1
    background-color: white
    &:focus
      color: #222
      font-size: 12px
      transition: 0ms

  &.is-active
    position: fixed
    left: 0px
    width: 100vw
    height: 75px
    z-index: 15
    top: 0
    background: $backgroundColor
    #search-field
      overflow-x: hidden
      position: fixed
      margin: auto
      transition: 200ms
      top: 17px
      width: 400px
      right: 0
      left: 0

.results-overlay
  width: 100vw
  height: 100vw
  overflow-x: hidden
  margin: auto
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  margin: auto
  background: $backgroundColor
  opacity: 1
  z-index: 4
  padding: 50px
  padding-left: 150px
  display: none
  margin-top: 0px
  
img.close-search
  right: 50px
  top: 25px
  position: fixed
  z-index: 15
  height: 30px
  display: none
  cursor: pointer

#results
  z-index: 5
  margin: 0px auto 25px
  width: 750px
  max-width: 92%
  top: 0px
  
  p, a, a h2
    margin: auto
    display: block
    color: #eee !important
  
  a
    margin-bottom: 75px
    text-decoration: none
    &:hover
      text-decoration: underline
      color: white
  
  a h2
    h3()
    color: #eee !important
    text-transform: none
  
  & > p
    margin-top: 25px
    margin-bottom: 75px