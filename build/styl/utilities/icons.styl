.close-icon
  cursor: pointer
  position: fixed
  width: 100%
  left: 0
  right: 0
  top: 49px
  height: 80px
  z-index: inherit

.back-icon
  z-index: 1001
  cursor: pointer
  position: fixed
  top: -29px
  display: none

  svg
    left: 33px
    margin-left: -100px
    position: absolute
    transform: scale(0.10)

    g
      fill: $gold

.x-icon
  position: fixed
  cursor: pointer
  right: 75px
  z-index: 30
  top: 75px
  z-index: 19
  height: 100px
  transform: scale(0.8)
  display: none
  svg
    position: absolute
    g
      fill: #666
      path
        fill: #666
