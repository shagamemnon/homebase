#splash-screen
  top: 0
  display: none
  position: fixed
  margin: auto
  margin-top: 55px
  width: 100%
  z-index: 1002
  height: 100%
  overflow: hidden
  bottom: 0
  left: 0
  right: 0
  background: white

#baseLoad
  position: fixed
  display: block
  margin: 0
  width: 100%
  height: 100%
  overflow: hidden
  background: $backgroundColor
  z-index: 100000
  transition: 400ms ease-out
  top: 25%
  transform: translateY(-50%)
  bottom: 0
  left: 0
  right: 0
  opacity: 0.99
  h2
    position: absolute
    margin: auto
    font-family: "Open Sans"
    font-weight: 700 !important
    color: #aaa
    letter-spacing: 7px
    font-size: 48px
    left: 0
    right: 0
    top: 25%
    transform: translateY(-50%)
    text-transform: uppercase
    text-align: center
    transition: 40ms cubic-bezier(.58,.01,1,1)
    display: block
    opacity: 1
  em
    small()
    font-family: "Roboto Slab"
    text-transform: none
    letter-spacing: 0
    font-size: 12px
    color: white
    display: block
    left: 0
    right: 0
    bottom: 30px
    position: absolute
  .curve-me
    width: 100px;
    height: 100px;

  &.pageCompiling
    top: -50%
    transition: 400ms linear
    transform: translateY(50%)
    opacity: 0.99
    display: block
    visibility: visible
    
    h2
      transition: 0ms