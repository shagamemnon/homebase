paragraph()
  font-family $ParagraphFont
  font-size 19px
  font-weight 400
  font-style normal
  font-stretch normal
  line-height 1.5em
  margin-bottom: 0px
  letter-spacing normal
  text-align left
  color #151515
  &:after
    content: ''
    display: block
    margin-bottom: 1.4em
  @media(max-width: 900px)
    font-family: $ParagraphFont
    font-size: 16px
    &:after
      padding-bottom: 0px

blog-title()
  font-family $RobotoSlab
  font-size 42px
  text-transform: uppercase
  font-weight 700 !important
  font-style normal
  font-stretch normal
  line-height 1
  letter-spacing 1px
  text-align center
  display: block
  @media(max-width: 900px)
    font-family: $MobileHeader
    font-size: 34px
    line-height: 1.4
    letter-spacing: 1px

inline-header()
  font-family $HeaderFont
  font-size 26px
  font-weight normal
  font-style normal
  font-stretch normal
  line-height $marginBottom
  letter-spacing 2px
  text-align left
  text-transform: uppercase
  color #242424
  font-weight: 800 !important
  display: block
  margin-bottom: $marginBottom
  padding: $marginBottom 0 0 0 !important
  @media(max-width: 900px)
    font-family: $HeaderFont !important
    color: #262626
    letter-spacing: 0.7px
    font-size: 22px
    font-weight: bold !important
    margin-bottom: 12px
    padding: 0 !important
    margin-top: 36px

blog-subheader()
  font-family: $RobotoSlab
  font-size 24px
  font-style normal
  font-stretch normal
  font-weight: 200
  line-height 32px
  letter-spacing 0px
  text-align center
  color: $dark-gray
  @media(max-width: 900px)
    font-family: $MobileHeader
    font-size: 17px
    line-height: 24px !important

caption-header()
  font-family $HeaderFont
  font-size 20px
  font-weight 700 !important
  font-style normal
  font-stretch normal
  line-height 1
  letter-spacing 0.7px
  text-align left
  text-transform: uppercase
  color $dark-gray
  display: block
  margin-bottom: $marginBottom * 0.5
  & > strong, & > a
    font-family: inherit
    font-weight: inherit
    font-size: inherit
  @media(max-width: 900px)
    font-family: $HeaderFont
    font-size: 17px
    letter-spacing: 1px
    margin-bottom: 0px
    margin-top: 12px
    padding-bottom: 0
    strong, a
      letter-spacing: 1.4px !important

image-caption()
  font-family $RobotoSlab
  font-size 16px
  font-weight 400 !important
  line-height: 24px
  font-stretch normal
  letter-spacing normal
  font-style: italic
  text-align left
  display: block
  color #888
  @media(max-width: 900px)
    font-family: $MobileFont
    font-size: 17px
    line-height: 24px

image-credit()
  font-family $HeaderFont
  font-size 12px
  font-weight normal
  font-style italic
  font-stretch normal
  line-height 14px
  letter-spacing normal
  text-align right
  color #937f7f
  text-transform: none
  margin-bottom: $marginBottom
  @media(max-width: 900px)
    font-family: $MobileHeader

rotate()
  font-family $HeaderFont
  font-size 16px
  font-weight 300
  font-style normal
  font-stretch normal
  line-height normal
  letter-spacing 0
  text-align center
  color #000000

small()
  font-family $HeaderFont
  font-size 9px
  font-weight 300
  font-style italic
  font-stretch normal
  line-height normal
  letter-spacing 0.8px
  text-align center
  color white
  color #837f7f
  @media(max-width: 900px)
    font-family: $MobileHeader

box-title()
  font-family $Ingra
  text-transform: none !important
  font-size 30px
  font-weight 300 !important
  font-style normal
  font-stretch normal
  line-height 36px
  letter-spacing 0px
  text-align left
  color $black
  padding: 24px 0 0 0 !important
  @media(max-width: 900px)
    font-family: $MobileHeader
    font-size: 24px
    line-height: 32px

h1()
  blog-title()

h2()
  blog-title()

h3()
  inline-header()

h4()
  inline-header()

h5()
  blog-subheader()

h6()
  rotate()

caption()
  image-caption()

p()
  paragraph()


menu-item()
  font-family: $ButtonFont
  line-height: 1
  font-weight: 400
  margin-bottom: $marginBottom*2
  color: #999999
  font-size: 11px
  letter-spacing: -0.2px
  text-decoration: none
  a
    text-decoration: none

inline-list-header()
  font-family $RobotoSlab
  font-size 24px
  font-weight bold
  font-style normal
  font-stretch normal
  line-height 1.5
  letter-spacing 1px
  text-align left
  color $orange

button()
  font-family: $ButtonFont
  font-weight: 900
  color: #222
  font-size: 12px
  text-transform: uppercase
  letter-spacing: 0.5px
  margin-bottom: $marginBottom
  display: block
  margin: 0 auto $marginBottom
  border: 1px solid #eee
  line-height: $marginBottom*4
  padding: 1px 30px 0
  & > a
    text-decoration: none

input()
  font-size: 17px
  padding: 0 12px 0 12px
  height: $marginBottom*3
  margin: 0
  top: 0
  line-height: 48px
  margin-top: -18px
  font-weight: 500
  border: none
  box-shadow: 0 1px 0 0 #c5c5c5
  position: absolute
  z-index: 1
  background: transparent
  font-family: $Condensed
  transition: all 200ms
  letter-spacing: 0.3px
  opacity: 0
  &.form-is-active
    margin-top: -23px
    opacity: 1
    transition: 320ms cubic-bezier(0,.2,.37,.96)
    & + label
      border-bottom: none
      font-size: 11px
      font-weight: 700
      transition: 320ms cubic-bezier(0,.2,.37,.96)
      bottom: 5px
      font-family: $Condensed
    &:focus
      color: #222
      box-shadow: 0 2px 0 0 $money
      & + label
        color: $money

label()
  color: #c5c5c5
  position: absolute
  font-size: 17px
  line-height: 48px
  z-index: 0
  letter-spacing: 0px
  bottom: -20px
  font-family: $Condensed
  border-bottom: 1px solid #c5c5c5
