
<div class="nav">
  {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}
  {{#if @blog.logo}}<a class="logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Logo" /></a>{{/if}}
  <h3 class="nav-title">Menu<a href="#" class="nav-close"><span class="hidden">Close</span></a></h3>
  <h1 class="blog-title">{{@blog.title}}</h1>
  <ul>{{#foreach navigation}}<li class="nav-{{slug}}{{#if current}} nav-current{{/if}}" role="presentation"><a href="{{url absolute="true"}}">{{label}}</a></li>{{/foreach}}</ul>
  <div>
    {{#if @labs.subscribers}}<a class="subscribe-button" href="{{@blog.url}}/subscribe/">Subscribe</a>
    {{else}}<a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>
    {{/if}}
  </div>
</div><span class="nav-cover"></span>