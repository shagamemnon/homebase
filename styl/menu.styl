nav
  width: 100%
  top: 0
  position: absolute
  min-height: 75px
  height: 75px
  margin-bottom: 100px
  background: $backgroundColor
  box-shadow: 1px 
  display: block
  z-index: 1
  li, ul, a, h3, h1
    color: white
  &:after
    content: ''
  a.logo
    img
      display: none
    a.nav-close 
      height: 10px
  h3.nav-title
    span(1/8)
    display: inline
    h4()
    color: white
    span.hidden
      p()
      color: white
  h1.blog-title
    span(1/4)
    shift(1/12)
    h2()
    font-weight: 700
    padding-top: 38px
    color: #eee
    letter-spacing: 5px
  ul
    width: 750px
    float: right
    list-style: none
    height: inherit
    position: absolute
    display: inline
    top: 0
    line-height: 100px
    margin-bottom: 0
    
    li[role="presentation"]
      span(1/4)
      font-family: $Gotham
      font-weight: 500
      color: #aaa
      text-align:center
      font-size: 11px
      line-height: inherit
      padding-top: 0px
      text-transform: uppercase
      cursor: pointer
      position: relative
      z-index: 2
      height: 100%   
      &:hover
        color: white
      &:last-of-type:hover
        color: #222
  .menu-icon
    position: absolute
    z-index: 0
    float: right
    text-align: right
    margin-right: 0
    margin-left: auto
    width: auto
    height: 50px
    right: 37px
    top: 4px
    svg.svg
      height: 24px
      width: 24px
  ul li[role="presentation"]
    .filterMenu
      width: 300px
      position: absolute
      background: white
      height: 100vh
      padding-top: 10px
      top: 0px
      margin-right: -400px
      right: 0
      opacity: 0.98
      color: white
      transition: .2s ease-out
      visibility: hidden
      a
        color: transparent
        visibility: hidden
        transition-delay: 0
        text-decoration none
        transition: 0ms
        &.is-active-filter
          transition: 0ms
          color: green !important
    &:hover
      .filterMenu
        transition: .2s ease-in
        visibility: visible
        background: white
        right: 0
        margin-right: -100px
        a
          visibility: visible
          color: #222
          transition-delay: .18s
      .menu-icon svg.svg #Page-1
        fill: black   
        